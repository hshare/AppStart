<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SpringIndicator">
        <!--tab text color -->
        <attr name="siTextColor" format="reference" />
        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference" />
        <!--tab item bg -->
        <attr name="siTextBg" format="reference" />
        <!--tab text size-->
        <attr name="siTextSize" format="dimension" />
        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference" />
        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference" />
        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension" />
        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension" />
    </declare-styleable>

    <color name="si_default_text_color">#000000</color>
    <color name="si_default_text_color_selected">#FFFFFF</color>
    <color name="si_default_indicator_bg">#FFFF0000</color>

    <dimen name="si_default_text_size">18sp</dimen>
    <dimen name="si_default_radius_max">24dp</dimen>
    <dimen name="si_default_radius_min">8dp</dimen>

    <color name="indicator_1">#55B3C2</color>
    <color name="indicator_2">#64A4A4</color>
    <color name="indicator_3">#66D7B9</color>
    <color name="indicator_4">#FDBC7D</color>


    <string name="indicator_1">欢</string>
    <string name="indicator_2">迎</string>
    <string name="indicator_3">光</string>
    <string name="indicator_4">临</string>

    <array name="indicator_titles">
        <item>@string/indicator_1</item>
        <item>@string/indicator_2</item>
        <item>@string/indicator_3</item>
        <item>@string/indicator_4</item>
    </array>

    <array name="indicator_colors">
        <item>@color/indicator_1</item>
        <item>@color/indicator_2</item>
        <item>@color/indicator_3</item>
        <item>@color/indicator_4</item>
    </array>

</resources>